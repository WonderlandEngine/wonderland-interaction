{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended-type-checked"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc"
    ],
    "root": true,
    "settings": {},
    "parserOptions": {
        "project": true,
        "tsconfigRootDir": "./"
    },
    "overrides": [
        {
            "files": [
                "src/**/*.ts"
            ]
        }
    ],
    "rules": {
        "tsdoc/syntax": "warn",
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": "enum",
                "format": [
                    "PascalCase"
                ]
            },
            {
                "selector": "property",
                "format": ["camelCase"],
                "leadingUnderscore": "forbid"
            },
            {
                "selector": "property",
                "modifiers":[
                    "private"
                ],
                "format": ["camelCase"],
                "leadingUnderscore": "allow"
            },
            {
                "selector": "property",
                "modifiers": [
                    "static"
                ],
                "format": [
                    "PascalCase"
                ]
            }
        ],
        "@typescript-eslint/no-unsafe-member-access": "warn",
        "@typescript-eslint/no-unsafe-call": "warn",
        "@typescript-eslint/no-inferrable-types": "error",
        "curly": "error"
    }
}